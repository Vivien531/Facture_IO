<%- include('./partials/navbar'); %>

  <div class="col-md-8 mb-3 mt-2 mt-md-5 mx-auto">
    <div class="card">
      <div class="card-header bg-transparent">
        <h4 class="text-uppercase text-center ls-1 py-1 mb-0">Ajouter une Prestation</h4>
      </div>
      <div class="card-body">
        <form action="/app/addPrestation" method="POST" id="addPrestationForm">
          <div class="form-group">
            <input type="text" id="name" name="name" class="form-control" placeholder="Nom" required="required"/>
          </div>

          <div class="form-group">
            <input type="number" id="priceHT" name="priceHT" class="form-control" min="0" step="0.01" placeholder="Prix HT" required="required"/>
          </div>

          <div class="form-group mb-5">
            <label>TVA</label>
            <select class="custom-select" name="tva" required="required">
              <option value='{ "tva": "2,1", "tvaValue": 1.021}'>2,1%</option>
              <option value='{ "tva": "5,5", "tvaValue": 1.055}'>5,5%</option>
              <option value='{ "tva": "8,5", "tvaValue": 1.085}'>8,5%</option>
              <option value='{ "tva": "10", "tvaValue": 1.10}'>10%</option>
              <option value='{ "tva": "20", "tvaValue": 1.20}' selected="selected">20%</option>
            </select>
          </div>

          <div class="row">
            <button type="submit" class="btn btn-primary col">Valider
              <i class="fas fa-check ml-1"></i>
            </button>
            <button onclick="window.location.href='/app/dashboard'" type="button" class="btn btn-primary col">Annuler
              <i class="fas fa-undo ml-1"></i>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <%- include('./partials/messages') %>

    <script src="/js/addPrestation.js" charset="utf-8"></script>

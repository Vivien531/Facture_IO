<%- include('./partials/navbar'); %>

  <div class="col-md-8 mb-3 mt-2 mt-md-5 mx-auto">
    <div class="card card-body">
      <form action="/users/updateUser" method="POST" class="d-none d-md-block updateUserForm">
        <div class="row">
          <div class="form-group col">
            <label for="lname">Nom</label>
            <input type="lname" id="lastName" name="lastName" class="form-control" placeholder="Nom" value="<%= typeof user.lastName != 'undefined' ? user.lastName : '' %>"/>
          </div>
          <div class="form-group col">
            <label for="fname">Prénom</label>
            <input type="fname" id="firstName" name="firstName" class="form-control" placeholder="Prénom" value="<%= typeof user.firstName != 'undefined' ? user.firstName : '' %>"/>
          </div>
        </div>
        <div class="row">
          <div class="form-group col">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Email" value="<%= typeof user.email != 'undefined' ? user.email : '' %>"/>
          </div>
          <div class="form-group col">
            <label for="phone">Téléphone</label>
            <input type="tel" id="phone" name="phone" class="form-control" placeholder="Téléphone" minlength="10" maxlength="10" value="<%= typeof user.phone != 'undefined' ? user.phone : '' %>"/>
          </div>
        </div>
        <div class="row">
          <div class="form-group col">
            <label for="cp">Code Postal</label>
            <input type="number" id="cp" name="cp" class="form-control" placeholder="Code Postal" minlength="5" maxlength="5" value="<%= typeof user.cp != 'undefined' ? user.cp : '' %>"/>
          </div>
          <div class="form-group col">
            <label for="city">Ville</label>
            <input type="text" id="city" name="city" class="form-control" placeholder="Ville" value="<%= typeof user.city != 'undefined' ? user.city : '' %>"/>
          </div>
        </div>
        <div class="form-group">
          <label for="address">Adresse</label>

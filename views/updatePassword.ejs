<%- include('./partials/navbar'); %>

  <div class="col-md-8 mb-3 mt-2 mt-md-5 mx-auto">
    <div class="card card-body">
        <form action="/users/updatePassword" method="POST" id="updatePasswordForm">
          <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" id="password" name="password" class="form-control" minlength="6" required="required" placeholder="Mot de passe" value=""/>
          </div>
          <div class="form-group">
            <label for="newPassword">Nouveau mot de passe</label>
            <input type="password" id="newPassword" name="newPassword" class="form-control" minlength="6" required="required" placeholder="Nouveau mot de passe" value=""/>
          </div>
          <div class="form-group">
            <label for="newPassword2">Confirmer le mot de passe</label>
            <input type="password" id="newPassword2" name="newPassword2" class="form-control" minlength="6" required="required" placeholder="Confirmer le mot de passe" value=""/>
          </div>
          <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary mx-1">Valider
              <i class="fas fa-check ml-1"></i>
            </button>
            <button onclick="window.location='/app/dashboard'" type="button" class="btn btn-primary mx-1">Annuler
              <i class="fas fa-undo ml-1"></i>
            </button>
          </div>
        </form>
      </div>
    </div>

    <%- include('./partials/messages') %>

    <script src="/js/updatePassword.js" charset="utf-8"></script>
